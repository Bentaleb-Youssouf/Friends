<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/add_friend_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/tv_size"
        android:text="Add New Friend"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_size"
        android:textStyle="bold" />

    <TextView
        android:layout_margin="@dimen/margin_5dp"
        android:layout_below="@+id/add_friend_title"
        android:text="Last Name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstname_TV"/>
    <EditText
        android:id="@+id/nom_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstname_TV"
        android:layout_margin="@dimen/margin_5dp"
 />

    <TextView
        android:layout_margin="@dimen/margin_5dp"
        android:layout_below="@id/nom_add"
        android:id="@+id/lastname_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last name :"/>

    <EditText

        android:id="@+id/prenom_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname_TV"
        android:layout_margin="@dimen/margin_5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prenom_add"
        android:layout_marginTop="@dimen/margin_5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/addFriendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_5dp"

            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Add Friend"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>